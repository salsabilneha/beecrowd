#include<stdio.h>
int main()
{
  int X,Y;
  float TOTAL;
  scanf("%d%d",&X,&Y);
  if(X==1)
  {
      TOTAL=Y*4.00;
      printf("Total: R$ %.2f\n",TOTAL);
  }
  else if(X==2)
  {
      TOTAL=Y*4.50;
      printf("Total: R$ %.2f\n",TOTAL);
  }
  else if(X==3)
  {
      TOTAL=Y*5.000;
      printf("Total: R$ %.2f\n",TOTAL);
  }
  else if(X==4)
  {
      TOTAL=Y*2.00;
      printf("Total: R$ %.2f\n",TOTAL);
  }
  else if(X==5)
  {
      TOTAL=Y*1.50;
      printf("Total: R$ %.2f\n",TOTAL);
  }
  return 0;

}
